<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{bean}] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.oxal" level="info"/>

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
